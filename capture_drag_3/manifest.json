{
  "manifest_version": 3,
  "name": "capure_drag 3",
  "version": "0.1",
  "description": "Capture and display the screen",
  "host_permissions": ["*://*/*"],
  "permissions": ["tabs", "activeTab", "scripting"],
  "commands": {
    "capture_screen": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      },
      "description": "Capture and display the screen"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
