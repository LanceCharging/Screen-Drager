{
  "manifest_version": 3,
  "name": "Full Page Screenshot",
  "version": "1.0",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "capture_full_page": {
      "suggested_key": {
        "default": "Ctrl+Shift+C"
      },
      "description": "Capture and save full page screenshot"
    }
  },
  "permissions": ["activeTab", "storage", "downloads"]
}
