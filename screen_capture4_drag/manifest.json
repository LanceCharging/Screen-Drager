{
  "manifest_version": 3,
  "name": "screen_capture4_drag",
  "version": "1.0",
  "description": "Capture and display the screen",
  "permissions": ["activeTab"],
  "commands": {
    "capture_screen": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      },
      "description": "Capture and display the screen"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
